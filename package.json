{
  "name": "base",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "typecheck": "turbo run typecheck",
    "clean": "git clean -xdf .cache .turbo dist node_modules",
    "ui-add": "turbo run ui-add -F @repo/ui --"
  },
  "devDependencies": {
    "prettier": "^3.5.3",
    "turbo": "^2.5.4",
    "typescript": "5.8.2"
  },
  "packageManager": "pnpm@10.6.3",
  "engines": {
    "node": ">=18"
  }
}
